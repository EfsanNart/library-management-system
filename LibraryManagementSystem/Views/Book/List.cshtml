@model IEnumerable<LibraryManagementSystem.Models.ViewModels.BookListViewModel>
@{
    Layout = "_Layout";
}
<h2>Kitap Listesi</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Yazar</th>
            <th>Tür</th>
            <th>Yayın Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.AuthorFullName</td>
                <td>@book.Genre</td>
                <td>@book.PublishDate.ToShortDateString()</td>
                <td>
                    <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id">Detaylar</a> |
                    <a asp-controller="Book" asp-action="Update" asp-route-id="@book.Id">Düzenle</a> |
                    <a asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-warning" asp-controller="Book" asp-action="Add">Yeni Kitap Ekle</a>
